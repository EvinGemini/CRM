<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.crm.domain.SaleVisit" table="sale_visit">
        <id name="visit_id" column="visit_id">
            <generator class="uuid"/>
        </id>
        <property name="visit_time"/>
        <property name="visit_addr"/>
        <property name="visit_detail"/>
        <property name="visit_nexttime"/>

        <many-to-one name="user" column="visit_user_id" class="com.example.crm.domain.User"/>
        <many-to-one name="customer" column="visit_cust_id" class="com.example.crm.domain.Customer"/>
    </class>
</hibernate-mapping>